{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "npm-packages-offline-cache": true,
    ".next": true,
    "out": true,
    "coverage": true
  },
  "editor.formatOnSave": true,
  // "eslint.packageManager": "yarn", // The setting is deprecated. The Package Manager is automatically detected now
  // "eslint.validate": ["javascript", "typescript"], // No need above or equal to Version 2.0.4
  "eslint.lintTask.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "npm.packageManager": "yarn",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript][typescriptreact][javascript][javascriptreact][json][graphql][vue][markdown][html]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.packageManager": "yarn",
  "stylelint.validate": ["css", "sass", "scss", "postcss"],
  "[css][less][scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "cSpell.enabled": true,
  "cSpell.words": []
}
